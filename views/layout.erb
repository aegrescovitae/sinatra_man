<html>
  <head>
    <link href="/stylesheets/styles.css" rel="stylesheet">
    <title>Garrett's Sinatra App</title>
  </head>
  <body>
    <div class="navbar">
      <h3 class="logo">Sinatra Man Pages</h3>
        <div class='search-div'>
          <ul class='search'>
            <form action="https://google.com/search" method="get">
              <input type="hidden" name="sitesearch" value="" />
              <input type="text" name="q" placeholder="Google Search"/>
              <input type="submit" name="submit">
            </form>
          </ul>
        </div>
      <div class="navli-div">
        <ul>
          <li class='navli'><a href='/'>Home</a></li>
          <li class='navli'><a href='/cp'>CP</a></li>
          <li class='navli'><a href='/ls'>LS</a></li>
          <li class='navli'><a href='/mkdir'>MKDIR</a></li>
          <li class='navli'><a href='/touch'>Touch</a></li>
          <li class='navli'><a href='/mv'>MV</a></li>
        </ul>
      </div>
      <div class='internal-search'>
        <form action="internal_search" method="get">
          <input type="text" name="search" placeholder="Seach This Site" />
          <input type="submit" name="submit">
        </form>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
